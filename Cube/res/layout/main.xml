<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http;//schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
	tools:context=".MainActivity" >

	<com.me.cube.CubeView
		android:layout_width="match_parent"
		android:layout_height="120dp"
		android:id="@+id/cubeView" />

	<TextView
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:gravity="center_horizontal"
		android:layout_margin="10dp"
		android:text="Text"
		android:textAppearance="?android:attr/textAppearanceMedium" />

	<TableLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal" >


		<TableRow>

			<Button
				android:layout_width="0dp"
				android:layout_height="match_parent" 
				android:layout_weight="1"
				android:layout_margin="1dp"
				android:id="@+id/buttonSwitch"
				android:textColor="#FF00FF00"
				android:onClick="toast"
				android:text="Switch"/>

			<Button
				android:layout_width="0dp"
				android:layout_height="match_parent" 
				android:layout_weight="1"
				android:layout_margin="1dp"
				android:id="@+id/buttonForceDraw"
				android:textColor="#FF00FFFF"
				android:onClick="toast"
				android:text="F. Draw"/>

			<Button
				android:layout_width="0dp"
				android:layout_height="match_parent" 
				android:layout_weight="1"
				android:layout_margin="1dp"
				android:id="@+id/buttonPlus20"
				android:textColor="#FFFF0000"
				android:onClick="toast"
				android:text="+ 20"/>
		</TableRow>


		<TableRow>

			<Button
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:text="10"
				android:layout_margin="1dp"
				android:id="@+id/buttonSmall1"
				android:onClick="send"
			/>

			<Button
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="1" 
				android:text="20"
				android:layout_margin="1dp"
				android:id="@+id/buttonSmall2"
				android:onClick="send"
			/>
			<Button
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="1" 
				android:text="30"
				android:layout_margin="1dp"
				android:id="@+id/buttonSmall3"
				android:onClick="send"
			/>
			<Button
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="1" 
				android:text="40"
				android:layout_margin="1dp"
				android:id="@+id/buttonSmall4"
				android:onClick="send"
			/>
			<Button
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="1" 
				android:text="50"
				android:layout_margin="1dp"
				android:id="@+id/buttonSmall5"
				android:onClick="send"
			/>

		</TableRow>

		<TableRow>

			<Button
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="1" 
				android:text="60"
				android:layout_margin="1dp"
				android:id="@+id/buttonSmall6"
				android:onClick="send"
			/>
			<Button
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="1" 
				android:text="70"
				android:layout_margin="1dp"
				android:id="@+id/buttonSmall7"
				android:onClick="send"
			/>
			<Button
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="1" 
				android:text="80"
				android:layout_margin="1dp"
				android:id="@+id/buttonSmall8"
				android:onClick="send"
			/>
			<Button
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="1" 
				android:text="90"
				android:layout_margin="1dp"
				android:id="@+id/buttonSmall9"
				android:onClick="send"
			/>
			<Button
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="1" 
				android:text="100"
				android:layout_margin="1dp"
				android:id="@+id/buttonSmall10"
				android:onClick="send"
			/>

		</TableRow>

	</TableLayout>

	<TableRow
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_weight="1" >

		<TextView
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:layout_weight="1" 
			android:gravity="center"
			android:text="Player"
			android:textAppearance="?android:attr/textAppearanceMedium"
		/>
		<TextView
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:layout_weight="1" 
			android:gravity="center"
			android:text="Computer"
			android:textAppearance="?android:attr/textAppearanceMedium"
		/>


	</TableRow>

	<TableRow
		android:layout_width="match_parent" 
		android:layout_height="0dp"
		android:layout_weight="2" >

		<TextView
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:layout_weight="1" 
			android:id="@+id/playerScoreView"
			android:gravity="center"
			android:text="0"
			android:textSize="36sp"
		/>
		<TextView
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:layout_weight="1" 
			android:id="@+id/compScoreView"
			android:gravity="center"
			android:text="0"
			android:textSize="36sp"
		/>


	</TableRow>
	
	
</LinearLayout>
